{
    "name": "your-name-here/DesignModule",
    "description": "DesignModule plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "cakephp/cakephp": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "DesignModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DesignModule\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
